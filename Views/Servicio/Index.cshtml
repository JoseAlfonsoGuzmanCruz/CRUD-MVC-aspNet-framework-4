@model List<CRUD_MVC_aspNet_framework_4.Models.entidadb.EntidadServicio>
@{
    ViewBag.Title = "Listado de servicios";
}

<h2>@ViewBag.Title</h2>
<div class="container">
    <div>
        <a href="#" class="btn btn-primary">Nuevo</a>
        <p></p>
    </div>
    <div>
        <table class="table table-bordered table-hover">
            <tr>
                <td>Id</td>
                <td>Nombre</td>
                <td>Direccion</td>
            </tr>
            @foreach (var reg in Model)
            {
                <tr>
                    <td>@reg.id</td>
                    <td>@reg.nombre</td>
                    <td>@reg.direccion</td>
                    <td>
                        <a href="#" class="btn btn-success">Editar</a>
                        <a href="#" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

